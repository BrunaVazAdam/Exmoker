<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ResultadoInformacoesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                style="@style/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_resultado_informacoes"
                android:textColor="@color/exmoker_darker" />

        </LinearLayout>

        <View
            android:id="@+id/cad_ca_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/exmoker_darker" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="20dp"
                android:padding="20dp"
                app:cardBackgroundColor="@color/exmoker"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/Subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_dinheiro_gasto_total"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/ri_tv_estimativa_gasto_total"
                        style="@style/ValorEconomiaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="20dp"
                android:padding="20dp"
                app:cardBackgroundColor="@color/exmoker"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/EconomiaText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_dinheiro_gasto_diario"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/ri_tv_estimativa_gasto_diario"
                        style="@style/ValorEconomiaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="20dp"
                android:padding="20dp"
                app:cardBackgroundColor="@color/exmoker"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/EconomiaText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_dinheiro_gasto_mensal"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/ri_tv_estimativa_gasto_mensal"
                        style="@style/ValorEconomiaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="20dp"
                android:padding="20dp"
                app:cardBackgroundColor="@color/exmoker"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        style="@style/EconomiaText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_dinheiro_gasto_anual"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/ri_tv_estimativa_gasto_anual"
                        style="@style/ValorEconomiaText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/white" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ri_bt_avancar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_resultado_avancar"
                android:textColor="@color/white"
                app:backgroundTint="@color/exmoker"
                app:cornerRadius="@dimen/border_radius_input" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>