<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformacoesAdicionaisActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                style="@style/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_informacoes_adicionais" />

        </LinearLayout>

        <View
            android:id="@+id/cad_ca_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white" />

        <ernestoyaquello.com.verticalstepperform.VerticalStepperFormView
            android:id="@+id/stepper_form_informacoes_adicionais"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:form_circle_background_color="@color/white"
            app:form_circle_completed_background_color="@color/white"
            app:form_circle_error_background_color="@color/white"
            app:form_circle_text_color="@color/exmoker_darker"
            app:form_next_button_background_color="@color/exmoker_darker"
            app:form_next_button_pressed_background_color="@color/exmoker_darker"
            app:form_subtitle_text_color="@color/white"
            app:form_title_text_color="@color/white" />

    </LinearLayout>
</ScrollView>