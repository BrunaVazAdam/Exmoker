<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rf_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultadoFargestromActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                style="@style/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_resultado_fargestrom" />

        </LinearLayout>

        <View
            android:id="@+id/cad_ca_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/card_shape"
                android:orientation="vertical"
                android:padding="15dp">


                <TextView
                    android:id="@+id/tv_rf_title_dependencia"
                    style="@style/TextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_rf_subtitle_dependencia"
                    style="@style/Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_rf_subtitle_negrito"
                    style="@style/TextBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="end"
                android:orientation="vertical">

                <View
                    android:id="@+id/vw_bg_icone_alerta"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/ic_triangle_up"
                    android:backgroundTint="?colorOnPrimary"
                    android:translationX="5dp"
                    android:translationY="-100dp" />

                <View
                    android:id="@+id/view"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/ic_alert"
                    android:translationY="-180dp"
                    tools:layout_editor_absoluteX="314dp"
                    tools:layout_editor_absoluteY="0dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/card_shape"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/textView5"
                    style="@style/TextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_doencas_title" />

                <TextView
                    android:id="@+id/textView6"
                    style="@style/Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_doencas_content" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rf_bt_avancar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/str_resultado_avancar"
                app:cornerRadius="@dimen/border_radius_input" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>